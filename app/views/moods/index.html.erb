<h2> Running Moods: </h2>
<% if @moods.empty? %>
  <p> You haven't added any running moods yet!  Add some below so we can better match you with running companions! </p>
<% else %>
  <% @moods.each do |mood| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= mood.name %></span>
          <ul>
            <li>Pace: <%= mood.mood_pace %> Per Mile</li>
            <li>Experience Level: <%= mood.mood_experience %></li>
            <li>Desired Distance: <%= mood.desired_distance %> Miles</li>
          </ul>
        </div>
        <div class="card-action">
          <%= link_to 'Delete This Mood', user_mood_path(mood.user_id, mood), method: :delete, data: { confirm: 'Are you sure you want to delete this mood?' } %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>

<%= link_to "Add New Mood", new_user_mood_path(current_user) %>

